<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.drawerlayout.widget.DrawerLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/back"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                app:srcCompat="@drawable/back" />

            <Button
                android:id="@+id/button"
                android:layout_width="320dp"
                android:layout_height="48dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="2dp"

                android:background="@drawable/custom_timkiem"
                android:text="Tìm kiếm"
                android:textAlignment="textStart"
                android:textColor="#000000"
                android:textColorLink="#000000"
                app:backgroundTint="@null" />

            <ImageView
                android:id="@+id/thongbao"
                android:layout_width="wrap_content"
                android:layout_height="43dp"
                android:layout_marginTop="2dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/thongbao" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/search"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginStart="320dp"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/search"
                tools:ignore="DuplicateIds" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/pepsi"
                android:layout_width="470dp"
                android:layout_height="400dp"
                android:layout_marginTop="12dp"
                android:layout_marginStart="0dp"
                app:srcCompat="@drawable/pepsi" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/drinks"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="362dp"
                android:fontFamily="sans-serif-black"
                android:gravity="center"
                android:text="Drinks"
                android:textSize="25sp"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="5dp"
                tools:layout_editor_absoluteY="423dp" />
            <ImageView
                android:id="@+id/arrowright"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_marginLeft="290dp"
                android:layout_marginTop="367dp"
                app:srcCompat="@drawable/arrowright"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/drinks_pepsi"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="407dp"
                android:fontFamily="sans-serif-black"
                android:gravity="center"
                android:text="Pepsi"
                android:textSize="25sp"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="5dp"
                tools:layout_editor_absoluteY="423dp" />
            <ImageView
                android:id="@+id/heart"
                android:layout_width="30dp"
                android:layout_height="37dp"
                android:layout_marginLeft="300dp"
                android:layout_marginTop="412dp"
                app:srcCompat="@drawable/heart" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/star"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="447dp"
                app:srcCompat="@drawable/star" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginTop="448dp"
                android:fontFamily="sans-serif-black"
                android:gravity="center"
                android:text="4.8   Ratings and reviews"
                android:textSize="15sp"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="5dp"
                tools:layout_editor_absoluteY="423dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="467dp"
                android:gravity="center"
                android:fontFamily="sans-serif-black"
                android:text="Customize"
                android:textSize="16sp"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="5dp"
                tools:layout_editor_absoluteY="423dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginStart="70dp"
                android:layout_marginTop="512dp"
                android:fontFamily="sans-serif-black"
                android:gravity="center"
                android:text="Size:"
                android:textSize="15sp"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="5dp"
                tools:layout_editor_absoluteY="423dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginStart="90dp"
                android:layout_marginTop="512dp"
                android:fontFamily="sans-serif-black"
                android:gravity="center"
                android:text="300ml"
                android:textSize="15sp"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="5dp"
                tools:layout_editor_absoluteY="423dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="512dp"
                android:fontFamily="sans-serif-black"
                android:gravity="center"
                android:text="390ml"
                android:textSize="15sp"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="5dp"
                tools:layout_editor_absoluteY="423dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="512dp"
                android:fontFamily="sans-serif-black"
                android:gravity="center"
                android:text="500ml"
                android:textSize="15sp"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="5dp"
                tools:layout_editor_absoluteY="423dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="547dp"
                android:gravity="center"
                android:fontFamily="sans-serif-black"
                android:text="Thành phần:"
                android:textSize="16sp"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="5dp"
                tools:layout_editor_absoluteY="423dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:scrollbars="vertical"
                android:id="@+id/textView_information"
                android:layout_width="370dp"
                android:layout_height="150dp"
                android:layout_marginStart="35dp"
                android:layout_marginTop="583dp"
                android:gravity="left"
                android:fontFamily="sans-serif-black"
                android:text="Nước bão hòa CO2, đường, chấy tạo chua, axit citric, hương cola tổng hợp, chất tạo màu, caramen.\nVới hương cola hấp dẫn, mang lại cảm giác sảng khoái, giải nhiệt tức thì trong những ngày nóng bức.\nHướng dẫn sử dụng: Dùng ngay khi mở bao bì. Ngon hơn khi uống lạnh
.\nHướng dẫn bảo quản: Bảo quản nơi khô ráo thoáng mát tránh ánh mắt mặt trời\nHạn sử dụng: 6 tháng kể từ ngày sản xuất."
                android:textSize="14sp"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="5dp"
                tools:layout_editor_absoluteY="423dp" />
        </LinearLayout>



    </androidx.drawerlayout.widget.DrawerLayout>


</androidx.constraintlayout.widget.ConstraintLayout>